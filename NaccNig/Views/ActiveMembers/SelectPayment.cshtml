@model NaccNig.ViewModels.PaymentOptionsVM

@{
    ViewBag.Title = "Select Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Select Payment</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    <div class="form-group">
        @Html.Label("Select Payment Options", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m=>m.PaymentOptionsName, null,"--Select Payment Type--", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PaymentOptionsName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Proceed To Pay" class="btn btn-primary" />
        </div>
    </div>
</div>
}

