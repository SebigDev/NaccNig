@using NaccNig.Models
@model NaccNig.ViewModels.MemberDashboardVM
@{
    ViewBag.Title = Model.Firstname +" " +Model.Surname+ "\'s Dashboard";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<!-- BEGIN CONTENT-->

    <div id="content">
        <section>
            <div class="section-body">
                <div class="row">

                    <!-- BEGIN ALERT - REVENUE -->
                    <div class="col-md-3 col-sm-6">
                        <div class="card">
                            <div class="card-body no-padding">
                                <div class="alert alert-callout alert-info no-margin">

                                    <strong class="text-lg"><b>State Of Deployment</b></strong><br />
                                    
                                    <span class="opacity-50"> @Model.StateOfDeployment</span>
                                    <div class="stick-bottom-left-right">
                                        <div class="height-2 sparkline-revenue" data-line-color="#bdc1c1"></div>
                                    </div>
                                </div>
                            </div><!--end .card-body -->
                        </div><!--end .card -->
                    </div><!--end .col -->
                    <!-- END ALERT - REVENUE -->
                    <!-- BEGIN ALERT - VISITS -->
                    <div class="col-md-3 col-sm-6">
                        <div class="card">
                            <div class="card-body no-padding">
                                <div class="alert alert-callout alert-warning no-margin">

                                   
                                    <strong class="text-lg"><b>State Of Origin</b></strong><br />
                                    <span class="opacity-50">@Model.StateOfOrigin</span>
                                   
                                </div>
                            </div><!--end .card-body -->
                        </div><!--end .card -->
                    </div><!--end .col -->
                    <!-- END ALERT - VISITS -->
                    <!-- BEGIN ALERT - BOUNCE RATES -->
                    <div class="col-md-3 col-sm-6">
                        <div class="card">
                            <div class="card-body no-padding">
                                <div class="alert alert-callout alert-danger no-margin">

                                   
                                    <strong class="text"><b>Call Up Number: </b>@Model.CallUpNumber </strong><br />


                                    <span class="opacity-100"><b>State Code:</b> <strong class="text-xm"><b>@Model.StateCode</b></strong></span>

                                   
                                </div>
                            </div><!--end .card-body -->
                        </div><!--end .card -->
                    </div><!--end .col -->
                    <!-- END ALERT - BOUNCE RATES -->
                    <!-- BEGIN ALERT - TIME ON SITE -->
                    <div class="col-md-3 col-sm-6">
                        <div class="card">
                            <div class="card-body no-padding">
                                <div class="alert alert-callout alert-success no-margin">
                                    <h4 class="pull-right text-success"><i class="md md-today"></i></h4>
                                    <strong class="text-lg">@DateTime.Now.ToLongDateString()</strong><br />
                                    <span class="opacity-50">Today's Date</span>
                                </div>
                            </div><!--end .card-body -->
                        </div><!--end .card -->
                    </div><!--end .col -->
                    <!-- END ALERT - TIME ON SITE -->


                </div><!--end .row -->
                <!-- BEGIN TODOS -->
                <div class="row">
                    <!-- BEGIN REGISTRATION HISTORY -->
                    <!-- BEGIN TODOS -->
                    <div class="clearfix"></div>
                    <div class="row">
                        <!-- section to display borrowed books -->
                        <div class="col-md-6">
                            <div class="card ">
                                <div class="card-head">
                                    <header><b>Books Borrowed</b></header>
                                    <div class="tools">
                                        <a class="btn btn-icon-toggle btn-close"><i class="md md-close"></i></a>
                                    </div>
                               
                                </div><!--end .col -->
                                <!-- END TODOS -->
                            </div>
                        </div>
                        <!-- BEGIN REGISTRATION HISTORY -->
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-head">
                                    <header><b>ClassRoom Activity</b></header>
                                    <div class="tools">
                                        <a class="btn btn-icon-toggle btn-refresh"><i class="md md-refresh"></i></a>
                                        <a class="btn btn-icon-toggle btn-collapse"><i class="fa fa-angle-down"></i></a>
                                        <a class="btn btn-icon-toggle btn-close"><i class="md md-close"></i></a>
                                    </div>
                                </div><!--end .card-head -->
                                <div class="card-body no-padding height-9">
                                    <div class="row">
                                        <div class="col-sm-6 hidden-xs">
                                            <div class="force-padding text-sm text-default-light">
                                                <h4>
                                                    <i class="md md-mode-comment text-primary-light"></i>
                                                    Completed Assignments
                                                </h4>
                                            </div>
                                        </div><!--end .col -->
                                        <div class="col-sm-6">
                                            <div class="force-padding pull-right text-default-light">
                                                <h2 class="no-margin text-primary-dark"><span class="text-xxl">66.05%</span></h2>
                                                <i class="fa fa-caret-up text-success fa-fw"></i> more registrations
                                            </div>
                                        </div><!--end .col -->
                                    </div><!--end .row -->
                                    <div class="row">
                                        <div class="col-sm-6 hidden-xs">
                                            <div class="force-padding text-sm text-default-light">
                                                <h4>
                                                    <i class="md md-mode-comment text-primary-light"></i>
                                                    ClassRoom Notifications
                                                </h4>
                                            </div>
                                        </div><!--end .col -->
                                        <div class="col-sm-6">
                                            <div class="force-padding pull-right text-default-light">
                                                <ul>
                                                    <li></li>
                                                </ul>
                                            </div>
                                        </div><!--end .col -->
                                    </div><!--end .row -->
                                    <div class="stick-bottom-left-right force-padding">
                                        <div id="flot-registrations" class="flot height-5" data-title="Registration history" data-color="#0aa89e"></div>
                                    </div>
                                </div><!--end .card-body -->
                            </div><!--end .card -->
                        </div><!--end .col -->
                        <!-- END REGISTRATION HISTORY -->


                    </div><!--end .row -->
                </div>
            </div>
        </section>
            </div>
           
                <!--end #content-->
                <!-- END CONTENT -->
