@model NaccNigModels.Payments.MonthlyDues
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<h2>Monthly Dues</h2>
@using (Html.BeginForm())



{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    <h2>@ViewBag.ErrorMessage</h2>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("Amount", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model=>model.Amount, null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Payment Status", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model=>model.PaymentStatus, null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PaymentStatus, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="checkbox">
       <label>
           @Html.CheckBoxFor(m=>m.IsPaidMonthlyDues,  new { @class="col-md-2"}) 
           <b>Payment Check</b>
       </label>
    </div>
    <hr />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Pay" class="btn btn-default" />
        </div>
    </div>
</div>
}
