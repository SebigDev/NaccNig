@model NaccNigModels.Payment.PaymentSetting

@{
                /**/

                ViewBag.Title = "Payment";
                Layout = "~/Views/Shared/Default.cshtml";
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            
            $.get("/ActiveMembers/GetPayCategory", function (data) {
                    var items = "<option>---- Select Category ----</option>";
                    $.each(data, function (index, row) {
                        items += " <option value='" + row.Value + "'>" + row.Text + "</option>";
                        $("#PaymentCategoryId").html(items);
                        //$("#StateChapterId").append(" <option value='" + row.StateChapId + "'>" + row.StateChapterName + "</option>")
                    });
                });
           
            $("#PaymentCategoryId").change(function () {
                $.get("/ActiveMembers/GetAmount/", {PaymentCategoryId: $("#PaymentCategoryId").val()}, function (data) {
                    $.each(data, function (index, row) {
                       var items = " <option value='" + row.Value + "'>" + row.Text + "</option>";
                        $("#AmountId").html(items);
                        //$("#StateChapterId").append(" <option value='" + row.StateChapId + "'>" + row.StateChapterName + "</option>")
                    });
                });
            });
        });
    </script>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Make Payment</h3>
        <div class="alert-info text-center">@ViewBag.Message</div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.PaymentId, "Payment ID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               <input type="text" name="PaymentId" value="@ViewBag.PaymentId" class="form-control"/>
                @Html.ValidationMessageFor(model => model.PaymentId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Payment Category", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (ViewBag.PayList != null)
            {
                @Html.DropDownListFor(model => model.PaymentCategoryId, ViewBag.PayList as SelectList, "Select Payment", htmlAttributes: new { id = "PaymentCategoryId", @class = "form-control" })
        }
                @Html.ValidationMessageFor(model => model.PaymentCategoryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Amount", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.AmountId, new SelectList(" "), htmlAttributes: new { id = "AmountId", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AmountId, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.ActiveMemberId, "Member Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ActiveMemberId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ActiveMemberId, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Proceed To Pay" class="btn btn-primary" />
            </div>
        </div>
    </div>
}



