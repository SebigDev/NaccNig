@model NaccNig.ViewModels.MembershipFeeVM

@{
    ViewBag.Title = "Make Payment";
    Layout = "~/Views/Shared/Default.cshtml";
}

<br />
<br />
<div class="card">
    <div class="card-head style-primary">
        <header>
                <div class="form-header  purple darken-4">
                    <h3><i class="fa fa-save"></i> PAYMENT</h3>
                </div>
            
        </header>

    </div><!--end .card-head -->
    <div class="card-body">
        @using (Html.BeginForm("Create","MembershipFees", FormMethod.Get))
        {
            @Html.AntiForgeryToken()


            <div class="form-horizontal">
                @*<h4>SchoolFeePayment</h4>*@
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
                <h2> Payment for @ViewBag.Payer </h2>

                <div class="form-group">
                   
                    <div class="col-md-6">
                        @Html.DropDownListFor(model=>model.FeeCategory,null,"-- Select Payment --", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FeeCategory, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-6">
                        <input type="submit" value="SELECT PAYMENT" class="btn btn-primary btn-lg" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>



<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script type="text/javascript">
   
    $(document).ready(function () {

        $('#FeeCategory').change(function () {
            
            var selectedValue = $('#FeeCategory').val();
           // window.alert(selectedValue);
           
            if (selectedValue === 'School_Fee') {
                document.getElementById('SchoolFeePaymentType').style.display = "block";
            } else {
                document.getElementById('SchoolFeePaymentType').style.display = "none";
            }
        });
    });
</script>