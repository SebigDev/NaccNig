@model IEnumerable<NaccNigModels.PaymentSettings.MemberFeeType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<br />
<br />
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Payment</h2>
        </div>
    </div>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-responsive table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FeeCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeeName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountInWords)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FeeCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FeeName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountInWords)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MemberFeeTypeId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MemberFeeTypeId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MemberFeeTypeId })
                </td>
            </tr>
        }

    </table>
</div>